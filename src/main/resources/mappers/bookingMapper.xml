<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.booking.dao.BookingDAO">
 	<select id="selectBooking" resultType="com.quiz.booking.model.Booking">
 		SELECT
 			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`booking`
 	</select>
 	
 	<insert id="insertBooking" parameterType="com.quiz.booking.model.Booking">
 		INSERT INTO `booking`
 		(
 			`name`
			, `date`
			, `day`
			, `headcount`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{date}
 			, #{day}
 			, #{headcount}
 			, #{phoneNumber}
 			, #{state}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<delete id="deleteBooking" parameterType="int">
 		DELETE
 		FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<select id="selectBookingByNameAndPhoneNumber" parameterType="map" resultType="com.quiz.booking.model.Booking">
 		SELECT
 			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`booking`
 		WHERE
 			`name` = #{name}
 		AND
 			`phoneNumber` = #{phoneNumber}
 	</select>
 </mapper>